generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  SALES
  PPC_MANAGER
  PPC_EMPLOYEE
  MATERIALS_MANAGER
  MATERIALS_EMPLOYEE
  PURCHASE
}

enum OrderStatus {
  PENDING
  CALCULATING
  MATERIAL_REQUESTED
  IN_PRODUCTION
  COMPLETED
  CANCELLED
}

enum RequestStatus {
  PENDING
  VERIFIED_BY_STAFF
  APPROVED
  ORDERED
  RECEIVED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role
  managerId String?  // For employees - points to their manager
  createdAt DateTime @default(now())
  
  // Relations
  manager   User?    @relation("ManagerEmployees", fields: [managerId], references: [id], onDelete: SetNull)
  employees User[]   @relation("ManagerEmployees")
  
  assignedOrders         Order[]            @relation("AssignedPPCEmployee")
  assignedMaterialReqs   MaterialRequest[]  @relation("AssignedMaterialsEmployee")
}

model Order {
  id               String            @id @default(cuid())
  orderNumber      String            @unique @default(cuid()) // Ensure uniqueness
  customerName     String
  productName      String
  quantity         Int
  deliveryDate     DateTime
  status           OrderStatus       @default(PENDING)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  
  // Task assignment for PPC team
  assignedToId     String?           // PPC employee assigned to this order
  assignedTo       User?             @relation("AssignedPPCEmployee", fields: [assignedToId], references: [id], onDelete: SetNull)
  assignedAt       DateTime?         // When was it assigned

  materialRequests MaterialRequest[]
  production       Production?
  variances        Variance[]
}

model BOM {
  id              String @id @default(cuid())
  productName     String
  itemName        String
  quantityPerUnit Float
  unit            String
  plannedRate     Float

  @@unique([productName, itemName])
}

model Inventory {
  id               String @id @default(cuid())
  itemName         String @unique
  currentStock     Float  @default(0)
  onOrderStock     Float  @default(0)
  reorderLevel     Float
  dailyConsumption Float
  leadTime         Int
  safetyStock      Float
  unit             String
}

model MaterialRequest {
  id              String                @id @default(cuid())
  orderId         String?
  order           Order?                @relation(fields: [orderId], references: [id])
  status          RequestStatus         @default(PENDING)
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  
  // Task assignment for Materials team
  assignedToId    String?               // Materials employee assigned to this request
  assignedTo      User?                 @relation("AssignedMaterialsEmployee", fields: [assignedToId], references: [id], onDelete: SetNull)
  assignedAt      DateTime?             // When was it assigned

  items           MaterialRequestItem[]
  purchaseOrders  PurchaseOrder[]
}

model MaterialRequestItem {
  id                String          @id @default(cuid())
  materialRequestId String
  materialRequest   MaterialRequest @relation(fields: [materialRequestId], references: [id])
  itemName          String
  requiredQty       Float
  shortageQty       Float
  actualPhysicalCount Float?        // Added for employee verification
  status            RequestStatus   @default(PENDING) // Added for line-item tracking
  purchaseOrders    PurchaseOrder[]
}

model PurchaseOrder {
  id                String          @id @default(cuid())
  materialRequestId String?         // Changed to optional
  materialRequest   MaterialRequest? @relation(fields: [materialRequestId], references: [id])
  materialRequestItemId String       // Changed to required
  materialRequestItem   MaterialRequestItem @relation(fields: [materialRequestItemId], references: [id])
  itemName          String
  quantity          Float
  rate              Float
  supplierName      String
  expectedDate      DateTime
  status            RequestStatus   @default(PENDING)
  createdAt         DateTime        @default(now())
}

model Production {
  id                String              @id @default(cuid())
  orderId           String              @unique
  order             Order               @relation(fields: [orderId], references: [id])
  status            OrderStatus         @default(PENDING)
  startedAt         DateTime?
  completedAt       DateTime?
  actualConsumption ActualConsumption[]
}

model ActualConsumption {
  id           String     @id @default(cuid())
  productionId String
  production   Production @relation(fields: [productionId], references: [id])
  itemName     String
  actualQty    Float
  actualRate   Float
}

model Variance {
  id             String   @id @default(cuid())
  orderId        String
  order          Order    @relation(fields: [orderId], references: [id])
  itemName       String
  plannedQty     Float
  actualQty      Float
  plannedRate    Float
  actualRate     Float
  qtyVariance    Float
  priceVariance  Float
  totalVariance  Float
  createdAt      DateTime @default(now())
}
